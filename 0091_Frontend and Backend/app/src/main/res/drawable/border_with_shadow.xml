<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ظل الخلفية -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" /> <!-- لون الظل -->
            <corners android:topLeftRadius="50dp" android:topRightRadius="50dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <!-- الخلفية الرئيسية مع Border -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- لون الخلفية -->
            <stroke android:width="1dp" android:color="#4CAF50" /> <!-- لون الحواف -->
            <corners android:topLeftRadius="50dp" android:topRightRadius="50dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>
