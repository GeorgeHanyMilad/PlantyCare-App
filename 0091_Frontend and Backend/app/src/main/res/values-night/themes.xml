<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.graduation.plantcare" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- تمنع ظهور ActionBar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- تخصيص لون الـ Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- السماح للرسم تحت الـ Status Bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- تمنع الفراغات الناتجة عن FitSystemWindows -->
        <item name="android:fitsSystemWindows">false</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="Theme.graduation.plantcare" parent="Base.Theme.graduation.plantcare" />
</resources>
